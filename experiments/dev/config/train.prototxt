model {
  attention_recognition_model {
    feature_extractor {
      baseline_feature_extractor {
      }
    }

    predictor {
      attention_predictor {
        rnn_cell {
          gru_cell {
            num_units: 256
          }
        }
        num_attention_units: 256
        attention_conv_kernel_size: 5
        output_embedding {
          one_hot_embedding {
          }
        }
        max_num_steps: 30
      }
    }

    label_map {
      character_set {
        text_string: "0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        delimiter: ""
      }
    }
    
    loss {
      sequence_cross_entropy_loss {
        sequence_normalize: true
        sample_normalize: true
      }
    }
  }
}

train_config {
  batch_size: 128
  optimizer {
    momentum_optimizer: {
      learning_rate: {
        manual_step_learning_rate {
          initial_learning_rate: 1e-3
          schedule {
            step: 60000
            learning_rate: 1e-4
          }
          schedule {
            step: 75000
            learning_rate: 1e-5
          }
        }
      }
      momentum_optimizer_value: 0.9
    }
  }
  num_steps: 90000
  data_augmentation_options {
    resize_image_random_method {
      target_height: 32
      target_width: 128
    }
  }
}

train_input_reader {
  tf_record_input_reader {
    input_path: "data/synth90k_10k.tfrecord"
  }
}
